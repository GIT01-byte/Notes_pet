{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "timeout": "3000ms",
  "port": 8080,
  "cache_ttl": "0s",
  "endpoints": [
    {
      "endpoint": "/notes_service/health_check/",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/notes/health_check",
          "host": [
            "http://notes_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/notes/create/",
      "method": "POST",
      "input_query_strings": ["*"],
      "input_headers": ["*"],
      "timeout": "5s",
      "backend": [
        {
          "url_pattern": "/api/v1/notes/create",
          "method": "POST",
          "host": [
            "http://notes_service:8000"
          ],
          "mapping": {
            "user": "note"
          }
        }
      ],
      "output_encoding": "json",
          "extra_config": {
        "proxy": {
            "sequential": true
        }
    }
    },
    {
      "endpoint": "/notes/delete/{note_id}/",
      "method": "DELETE",
      "input_query_strings": ["*"],
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/v1/notes/delete/{note_id}",
          "host": [
            "http://notes_service:8000"
          ]
        }
      ]
    },
    {
      "endpoint": "/notes/get_notes/",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/api/v1/notes/get_user_notes",
          "host": [
            "http://notes_service:8000"
          ]
        }
      ]
      },
    {
      "endpoint": "/users_service/health_check/",
      "method": "GET",
      "backend": [
        {
          "url_pattern": "/users/health_check",
          "host": [
            "http://notes_users:8001"
          ]
        }
      ]
    },
    {
      "endpoint": "/user/register/",
      "method": "POST",
      "input_query_strings": ["*"],
      "input_headers": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/register/",
          "host": [
            "http://notes_users:8001"
          ]
        }
      ]
    },
    {
      "endpoint": "/user/login/",
      "method": "POST",
      "input_query_strings": ["*"],
      "input_headers": ["*"],
      "output_encoding": "json",
      "backend": [
        {
          "url_pattern": "/users/login/",
          "host": [
            "http://notes_users:8001"
          ]
        }
      ]
    },
    {
      "endpoint": "/user/self_info/",
      "method": "GET",
      "input_headers": ["Authorization"],
      "backend": [
        {
          "url_pattern": "/users/me/",
          "host": [
            "http://notes_users:8001"
          ]
        }
      ]
    }
  ],
  "extra_config": {
      "security/cors": {
        "allow_origins": ["*"],
        "allow_methods": ["POST", "GET", "PUT", "PATCH", "DELETE", "OPTIONS"],
        "allow_headers": ["Origin", "Authorization", "Content-Type"],
        "expose_headers": ["Content-Length"],
        "allow_credentials": true,
        "max_age": "72h"
    }
  }
}
